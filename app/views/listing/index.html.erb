<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Equipamento dispon&iacute;vel para empr&eacute;stimo</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>N&uacute;mero de S&eacute;rie do Equipamento</th>
          <th>Nome do Equipamento</th>
          <th>Descri&ccedil;&atilde;o do Equipamento</th>
          <th>Tipo do Equipamento</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
      <tbody>
        <% @listing_available.each do |listing_available| %>
          <tr>
            <td><%= listing_available.serial_number %></td>
            <td><%= listing_available.name %></td>
            <td><%= listing_available.description %></td>
            <td><%= listing_available.equipment_type.name %></td>
            <td><%= link_to '', listing_available, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_equipment_path(listing_available), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', listing_available, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1 class="page-header">Equipamentos de Funcion&aacute;rios</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>N&uacute;mero de S&eacute;rie do Equipamento</th>
          <th>Nome do Equipamento</th>
          <th>Descri&ccedil;&atilde;o do Equipamento</th>
          <th>Tipo do Equipamento</th>
          <th>Nome do Funcion&aacute;rio</th>
          <th>Setor do Funcion&aacute;rio</th>
          <th>Localiza&ccedil;&atilde;o do Funcion&aacute;rio</th>
        </tr>
      </thead>
    
      <tbody>
        <% @listing_associated.each do |listing_associated| %>
          <tr>
            <td><%= link_to String(listing_associated.serial_number), listing_associated %></td>
            <td><%= listing_associated.name %></td>
            <td><%= listing_associated.description %></td>
            <td><%= listing_associated.equipment_type.name %></td>
            <td><%= link_to String(listing_associated.employee.name), listing_associated.employee %></td>
            <td><%= listing_associated.employee.sector.name %></td>
            <td><%= listing_associated.employee.location.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>