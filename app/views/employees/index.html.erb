<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1>Lista de Funcion&aacute;rios</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Setor</th>
          <th>Localiza&ccedil;&atilde;o</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee ? employee.name : "N/A" %></td>
            <td><%= employee.sector ? employee.sector.name : "N/A" %></td>
            <td><%= employee.location ? employee.location.name : "N/A" %></td>
            <td><%= link_to '', employee, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_employee_path(employee), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', employee, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <br>
    <%= link_to(new_employee_path, class: 'btn btn-default pull-right') do %>
      <span class="glyphicon glyphicon-plus"></span> Adicionar Funcion&aacute;rio
    <% end %>
  </div>
</div>
