<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1>Listing Employees</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Sector</th>
          <th>Location</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee ? employee.name : "N/A" %></td>
            <td><%= employee.sector ? employee.sector.name : "N/A" %></td>
            <td><%= employee.location ? employee.location.name : "N/A" %></td>
            <td><%= link_to 'Show', employee, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to 'Destroy', employee, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'New Employee', new_employee_path %>
  </div>
</div>
