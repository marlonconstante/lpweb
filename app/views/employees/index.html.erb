<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sector</th>
      <th>Location</th>
      <th>Visualizar</th>
      <th>Editar</th>
      <th>Remover</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.sector.name %></td>
        <td><%= employee.location.name %></td>
        <td><%= link_to 'Show', employee, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
        <td><%= link_to 'Destroy', employee, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

