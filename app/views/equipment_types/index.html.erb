<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1>Listing Equipment Types</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @equipment_types.each do |equipment_type| %>
          <tr>
            <td><%= equipment_type.name %></td>
            <td><%= link_to '', equipment_type, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_equipment_type_path(equipment_type), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', equipment_type, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'New Equipment type', new_equipment_type_path %>
  </div>
</div>
