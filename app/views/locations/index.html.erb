<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Visualizar</th>
      <th>Editar</th>
      <th>Remover</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= link_to 'Show', location, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
        <td><%= link_to 'Destroy', location, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

