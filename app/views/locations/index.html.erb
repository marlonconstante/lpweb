<div class="row">
  <div class="col-lg-12">
    <h1>Lista de Localiza&ccedil;&otilde;es</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descri&ccedil;&atilde;o</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= location ? location.name : "N/A" %></td>
            <td><%= location ? location.description : "N/A" %></td>
            <td><%= link_to '', location, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_location_path(location), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', location, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <br>
    <%= link_to(new_location_path, class: 'btn btn-default pull-right') do %>
      <span class="glyphicon glyphicon-plus"></span> Adicionar Localiza&ccedil;&atilde;o
    <% end %>
  </div>
</div>
