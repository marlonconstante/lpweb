<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1>Listing Xreflendings</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Equipment</th>
          <th>Employee</th>
          <th>Lend date</th>
          <th>Return date</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @xreflendings.each do |xreflending| %>
          <tr>
            <td><%= xreflending.equipment ? xreflending.equipment.name : "N/A" %></td>
            <td><%= xreflending.employee ? xreflending.employee.name : "N/A" %></td>
            <td><%= xreflending ? xreflending.lend_date.strftime("%b, %m %Y - %H:%M") : "N/A" %></td>
            <td><%= xreflending ? xreflending.return_date.strftime("%b, %m %Y - %H:%M") : "N/A" %></td>
            <td><%= link_to '', xreflending, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_xreflending_path(xreflending), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', xreflending, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'New Xreflending', new_xreflending_path %>
  </div>
</div>
