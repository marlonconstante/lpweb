<div class="row">
  <div class="col-lg-12">
    <h1>Lista de Empr&eacute;stimos</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Equipamento</th>
          <th>Funcion&aacute;rio</th>
          <th>Data de Empr&eacute;stimo</th>
          <th>Data de Devolu&ccedil;&atilde;o</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @xreflendings.each do |xreflending| %>
          <tr>
            <td><%= xreflending.equipment ? xreflending.equipment.name : "N/A" %></td>
            <td><%= xreflending.employee ? xreflending.employee.name : "N/A" %></td>
            <td><%= xreflending ? xreflending.lend_date.strftime("%d/%m/%Y %H:%M") : "N/A" %></td>
            <td><%= xreflending ? xreflending.return_date.strftime("%d/%m/%Y %H:%M") : "N/A" %></td>
            <td><%= link_to '', xreflending, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_xreflending_path(xreflending), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', xreflending, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <br>
    <%= link_to(new_xreflending_path, class: 'btn btn-default pull-right') do %>
      <span class="glyphicon glyphicon-plus"></span> Adicionar Empr&eacute;stimo
    <% end %>
  </div>
</div>
