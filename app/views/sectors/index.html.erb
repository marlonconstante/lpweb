<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1>Listing Sectors</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @sectors.each do |sector| %>
          <tr>
            <td><%= sector ? sector.name : "N/A" %></td>
            <td><%= link_to '', sector, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_sector_path(sector), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', sector, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'New Sector', new_sector_path %>
  </div>
</div>
