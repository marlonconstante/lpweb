<div class="row">
  <div class="col-lg-12">
    <h1>Lista de Equipamentos</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>N&uacute;mero de S&eacute;rie</th>
          <th>Nome</th>
          <th>Descri&ccedil;&atilde;o</th>
          <th>Funcion&aacute;rio</th>
          <th>Tipo de Equipamento</th>
          <th>Dispon&iacute;vel para Empr&eacute;stimo?</th>
          <th>Visualizar</th>
          <th>Editar</th>
          <th>Remover</th>
        </tr>
      </thead>
    
      <tbody>
        <% @equipment.each do |equipment| %>
          <tr>
            <td><%= equipment ? equipment.serial_number : "N/A" %></td>
            <td><%= equipment ? equipment.name : "N/A" %></td>
            <td><%= equipment ? equipment.description : "N/A" %></td>
            <td><%= equipment.employee ? equipment.employee.name : "N/A" %></td>
            <td><%= equipment.equipment_type ? equipment.equipment_type.name : "N/A" %></td>
            <td><%= equipment.employee ? "NÃ£o" : "Sim" %></td>
            <td><%= link_to '', equipment, :class => 'btn btn-default glyphicon glyphicon-eye-open' %></td>
            <td><%= link_to '', edit_equipment_path(equipment), :class => 'btn btn-default glyphicon glyphicon-pencil' %></td>
            <td><%= link_to '', equipment, :class => 'btn btn-default glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <br>
    <%= link_to(new_equipment_path, class: 'btn btn-default pull-right') do %>
      <span class="glyphicon glyphicon-plus"></span> Adicionar Equipamento
    <% end %>
  </div>
</div>